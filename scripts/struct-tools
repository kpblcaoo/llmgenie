#!/usr/bin/env python3
"""
Struct Tools - Command line interface for project structural analysis

This script provides easy access to struct_tools functionality from command line.
"""

import sys
import os
from pathlib import Path

# Add src to Python path
project_root = Path(__file__).parent.parent
src_path = project_root / "src"
sys.path.insert(0, str(src_path))

try:
    from struct_tools.cli_interface import main
    sys.exit(main())
except ImportError as e:
    print(f"‚ùå Error: Failed to import struct_tools: {e}")
    print(f"üí° Make sure you're in the correct project directory and dependencies are installed")
    sys.exit(1)
except KeyboardInterrupt:
    print(f"\n‚ùå Interrupted by user")
    sys.exit(1) 